 <span class="toggle-hands"> â–ˆ </span>
 <span class="toggle">Êƒ </span><span class="toggle" style="animation-delay: 0.15s;">Ê…</span></pre>
        </div>

        <div id="distance-display">è·é›¢: 0</div>
        <div id="fruit-display">è«‹è¼¸å…¥: </div>

        <input type="text" id="fruit-input" placeholder="è¼¸å…¥æ°´æœåç¨±" />

        <div id="game-over">éŠæˆ²çµæŸ</div>

        <button id="restart-btn" onclick="restartGame()">é‡æ–°é–‹å§‹</button>

        <!-- é¡¯ç¤ºè˜‹æœå’Œäººå½¢çš„è·é›¢ -->
        <div id="apple-distance-display">è˜‹æœèˆ‡äººå½¢çš„è·é›¢: 0</div>
    </div>

    <script>
        const dino = document.querySelector('.dino-container');
        const human = document.querySelector('.human-container');
        const gameOverMessage = document.getElementById('game-over');
        const restartBtn = document.getElementById('restart-btn');
        const distanceDisplay = document.getElementById('distance-display');
        const fruitDisplay = document.getElementById('fruit-display');
        const fruitInput = document.getElementById('fruit-input');
        const appleDistanceDisplay = document.getElementById('apple-distance-display');  // æ–°å¢è·é›¢é¡¯ç¤º

        let dinoPosition = 50;
        let isGameOver = false;

        const fruits = [
            "apple", "banana", "orange", "grape", "cherry", 
            "mango", "pineapple", "peach", "strawberry", "watermelon",
            "kiwi", "lemon", "pear", "plum", "papaya",
            "apricot", "blueberry", "raspberry", "blackberry", "coconut"
        ];

        let currentFruit = "";
        let isFruitCorrect = false;

        function checkDistance() {
            if (isGameOver) return;

            const dinoRect = dino.getBoundingClientRect();
            const humanRect = human.getBoundingClientRect();

            const distance = dinoRect.right - humanRect.left;
            distanceDisplay.textContent = `è·é›¢: ${Math.round(distance)} px`;

            // è¨ˆç®—è˜‹æœèˆ‡äººå½¢çš„å‚ç›´è·é›¢
            const apples = document.querySelectorAll('.apple');
            apples.forEach(apple => {
                const appleRect = apple.getBoundingClientRect();
                const appleVerticalDistance = Math.abs(appleRect.top - humanRect.bottom); // å‚ç›´è·é›¢
                appleDistanceDisplay.textContent = `è˜‹æœèˆ‡äººå½¢çš„è·é›¢: ${Math.round(appleVerticalDistance)} px`;

                // å¦‚æœè˜‹æœèˆ‡äººå½¢çš„è·é›¢å°æ–¼ 200ï¼Œæé¾å‘å¾Œç§»å‹• 50px
                if (appleVerticalDistance < 200) {
                    dinoPosition -= 200;
                    dino.style.left = `${dinoPosition}px`;  // æ›´æ–°æé¾ä½ç½®
                    apple.remove();  // ç§»é™¤å·²æ‰è½çš„è˜‹æœ
                }
            });

            if (distance > 140) {
                endGame();
            }
        }

        function endGame() {
            isGameOver = true;
            fruitInput.disabled = true;  // ç¦ç”¨è¼¸å…¥æ¡†

            dino.style.animation = 'none';
            human.style.animation = 'none';

            gameOverMessage.style.display = 'block'; 
            restartBtn.style.display = 'block'; 
        }

        function restartGame() {
            isGameOver = false;

            dinoPosition = 50;
            dino.style.left = `${dinoPosition}px`;
            human.style.right = '50px';

            dino.style.animation = 'move-dino 30s linear infinite';   
            human.style.animation = '';

            gameOverMessage.style.display = 'none';
            restartBtn.style.display = 'none';
            fruitInput.disabled = false;  

            distanceDisplay.textContent = 'è·é›¢: 0';
        }

        function updateFruitDisplay() {
            if (isFruitCorrect) {
                currentFruit = fruits[Math.floor(Math.random() * fruits.length)];
                fruitDisplay.textContent = `æ°´æœ: ${currentFruit}`;
                isFruitCorrect = false; // Reset after showing new fruit
            }
        }

        // åˆå§‹åŒ–é¡¯ç¤ºæ°´æœ
        currentFruit = fruits[Math.floor(Math.random() * fruits.length)];
        fruitDisplay.textContent = `æ°´æœ: ${currentFruit}`;

        fruitInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter' && !isGameOver) {
                if (fruitInput.value.trim().toLowerCase() === currentFruit.toLowerCase()) {
                    isFruitCorrect = true; // è¨­ç½®ç‚ºæ­£ç¢ºï¼Œæº–å‚™é¡¯ç¤ºä¸‹ä¸€å€‹æ°´æœ
                    fruitInput.value = ''; // æ¸…ç©ºè¼¸å…¥æ¡†
                    updateFruitDisplay(); // é¡¯ç¤ºä¸‹ä¸€å€‹æ°´æœ
                    dropApple(); // é¡¯ç¤ºæ‰è½çš„ğŸ
                }
            }
        });

        function dropApple() {
            const apple = document.createElement('div');
            apple.classList.add('apple');
            apple.textContent = 'ğŸ';
            apple.style.top = '2000px';   // è¨­å®šå‚ç›´ä½ç½®
            apple.style.left = '1020px'; // è¨­å®šæ°´å¹³ä½ç½®            
            document.getElementById('game-area').appendChild(apple);
        }

        setInterval(checkDistance, 100);
    </script>
