      margin: 0;
      display: flex;
    }
    #tools {
      position: fixed;
      left: 0;
      top: 0;
      width: 150px;
      height: 100vh;
      background: #f0f0f0;
      padding: 10px;
      display: flex;
      flex-direction: column;
      gap: 10px;
      align-items: center;
    }
    canvas {
      margin-left: 200px;
      margin-top: 40px;
      border: 1px solid #000;
    }
    button, input[type="file"] {
      padding: 10px;
      font-size: 14px;
      width: 100%;
    }
    .active {
      background-color: #ffa500 !important;
    }
    #title-btn {
      font-size: 18px;
      font-weight: bold;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
